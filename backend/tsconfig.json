{
  "compilerOptions": {
    "module": "commonjs",                               
    "typeRoots": ["./node_modules/@types", "./src/@types"],                                  
    "outDir": "./dist",                      
    "types": ["express", "jest"],             
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
